page{
  background: #eee;
}
.commit-top{
  width: 100%;
  height: 86rpx;
  background: #00b0ec;
}
.commit-top view{
  width: 104rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 30rpx;
}
.commit-false{
  float: left;
  color: #fff;
}
.commit-true{
  float: right;
  color: #a3daf6;
  outline: none;
  background: #00b0ec;
  height: 86rpx;
  font-size: 30rpx;
}
.commit-true::after{
  border: 0
}
.commit-textarea{
  background: #fff;
  width: 100%;
  height: 328rpx;
  padding-top: 10rpx;
}
textarea{
  background: #fff;
  width: 95%;
  height: 100%;
  margin: 0 auto;
}
.addImg{
  width: 61rpx;
  height: 49rpx;
  margin:30rpx 0 0 30rpx;
}
.saveImg{
  width: 100%;
}
.saveImg .saveImg-img{
  max-width: 150rpx; 
  max-height: 150rpx; 
  float: left;
  margin: 20rpx;
  position: relative;
  overflow: visible;
}
.saveImg-del{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.oddImg{
  width: 150rpx;
  height: 150rpx;
  position: relative;
  border: 2rpx solid #cdcdcd;
  float: left;
  margin: 20rpx 10rpx;
}
.oddImg image{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}