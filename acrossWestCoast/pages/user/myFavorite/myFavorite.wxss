.swiper-tab{  
    width: 70%;   
    text-align: center;  
    line-height: 80rpx;
    display: flex; 
    margin: 0 auto;
    height: 8%;
  }  
.swiper-tab-lists{  
    font-size: 35rpx;  
    color: #999;  
    flex: 1; 
    /* float: left; */
} 
 .swiper-tab-list{
    padding-bottom: 15rpx;
    color: #e6e4e4;
} 
.on{ 
    color: #fff;  
    border-bottom: 10rpx solid #fff;
  }  
.swiper-box{ 
  display: block;  
  height: 92%;   
  width: 100%; 
  overflow: hidden;
}  
swiper-item{
  overflow: auto;
  margin-top:15rpx;
}
navigator{
  width: 100%;
  height: 100%;
}
.myFavorite-swiper-item-list{
  width: 94%;
  margin: 0 auto;
  min-height: 92%;
  background: #fff;
  border-radius: 20rpx;
  margin-top:20rpx;
  overflow:auto;
  padding-top:25rpx;
}
.myFavorite-swiper-item-list-contant{
  width: 50%;
  height: 380rpx;
  float: left;
  margin-top: 25rpx;
}
.list-contant-img{
  max-width: 280rpx;
  height: 305rpx;
  margin: 0 auto;
}
.list-contant-img image{
  max-width: 280rpx;
  max-height: 280rpx;
  padding-top:25rpx;
}
.list-contant-title{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.myFavorite{
  width: 95%;
  min-height: 180rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #eee;
  padding-top: 20rpx;
}
.myFavorite-title{
  width: 100%;
  min-height: 100rpx;
  font-size: 34rpx;
  color: #333333
}
.myFavorite-time{
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #999;
  line-height: 80rpx;
}
.no-pinglun{
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  font-size: 35rpx;
  color: #999;
}