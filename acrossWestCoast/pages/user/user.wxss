page{
  background: #f9f9f9;
}
.person-top{
  width: 100%;
  height: 418rpx;
  position: relative;
}
.person-top-back{
  width: 100%;
  height: 418rpx;
  position: absolute;
  top: 0;
  z-index: -1;
}
.person-top-image{
  width: 100%;
  height: 240rpx;
  position: relative;
}
.person-top-image image{
  width: 168rpx;
  height: 168rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
}
.person-top-name{
  width: 100%;
  height: 50rpx;
  color: #333;
  font-size: 36rpx;
  text-align: center;
}
.person-top-integral{
  width: 100%;
  height: 100rpx;
  position: relative;
}
.person-top-integral image{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 44%;
  top: 20%;
  transform: translate(-50%,-50%);
}
.person-top-integral view{
  color: #999999;
  font-size: 24rpx;
  position: absolute;
  left: 53%;
  top: 20%;
  transform: translate(-50%,-50%);
}
.person-contant-list{
  width: 100%;
  height: 94rpx;
  background: #eee;
}
.person-contant-list-icon{
  width: 18%;
  height: 94rpx;
  float: left;
  position: relative;
}
.person-contant-list-icon image{
  max-width: 40rpx;
  max-height: 40rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.person-contant-list-title{
  width: 70%;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 30rpx;
  color: #333;
  float: left;
}
.person-contant-list-more{
  width: 12%;
  height: 94rpx;
  float: left;
  position: relative;
}
.person-contant-list-more image{
  width: 13rpx;
  height: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.person-contant-list-kefu{
  width: 50%;
}
.person-contant-list-phone{
  width: 32%;
  font-size: 30rpx;
  color: #999999;
  line-height: 94rpx;
  text-align: center;
}